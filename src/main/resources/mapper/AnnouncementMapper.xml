<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.fetchbeebackend.mapper.AnnouncementMapper">

    <!-- 结果映射 - Announcement实体 -->
    <resultMap id="AnnouncementResultMap" type="com.example.fetchbeebackend.entity.Announcement">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="publisherId" column="publisher_id"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <!-- 结果映射 - AnnouncementVO -->
    <resultMap id="AnnouncementVOResultMap" type="com.example.fetchbeebackend.vo.AnnouncementVO">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="publisherId" column="publisher_id"/>
        <result property="publisherName" column="publisher_name"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <!-- 插入公告 -->
    <insert id="insert" parameterType="com.example.fetchbeebackend.entity.Announcement"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO announcement (title, content, publisher_id, status)
        VALUES (#{title}, #{content}, #{publisherId}, #{status})
    </insert>

    <!-- 更新公告 -->
    <update id="update" parameterType="com.example.fetchbeebackend.entity.Announcement">
        UPDATE announcement
        SET title = #{title},
            content = #{content}
        WHERE id = #{id}
    </update>

    <!-- 逻辑删除公告（修改status为0） -->
    <update id="deleteById">
        UPDATE announcement
        SET status = 0
        WHERE id = #{id}
    </update>

    <!-- 根据ID查询公告 -->
    <select id="findById" resultMap="AnnouncementResultMap">
        SELECT * FROM announcement
        WHERE id = #{id}
    </select>

    <!-- 查询所有公告（管理员用，包含已下架） -->
    <select id="findAll" resultMap="AnnouncementVOResultMap">
        SELECT a.*, u.username AS publisher_name
        FROM announcement a
        LEFT JOIN user u ON a.publisher_id = u.id
        ORDER BY a.create_time DESC
    </select>

    <!-- 查询最新的已发布公告（普通用户用） -->
    <select id="findLatestPublished" resultMap="AnnouncementVOResultMap">
        SELECT a.*, u.username AS publisher_name
        FROM announcement a
        LEFT JOIN user u ON a.publisher_id = u.id
        WHERE a.status = 1
        ORDER BY a.create_time DESC
        LIMIT 1
    </select>

    <!-- 查询所有已发布公告 -->
    <select id="findAllPublished" resultMap="AnnouncementVOResultMap">
        SELECT a.*, u.username AS publisher_name
        FROM announcement a
        LEFT JOIN user u ON a.publisher_id = u.id
        WHERE a.status = 1
        ORDER BY a.create_time DESC
    </select>

</mapper>
